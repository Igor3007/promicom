include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug
include ../../blocks/components/table/table.pug
include ../../blocks/components/popup/popup.pug

block variables
    - const title = "Проекты - maxcr"

block styles
    link(rel="stylesheet" href="static/styles/maxcr.css")

block content

    .page-breadcrumbs
        ._container
            +breadcrumb([
                {
                    link: "/",
                    text: "Главная",
                },
                {
                    link: "/projects",
                    text: "Проекты",
                },
                {
                    link: "#",
                    text: "Max Clean Room",
                    isActive: true,
                }
            ], 'wow experience')


    include ../../blocks/modules/maxcr/maxcr
    include ../../blocks/modules/our-projects/our-projects


    +callbackPopup()

block scripts

    script(src="static/js/maxcr.js")
    script(src="static/js/main.js")